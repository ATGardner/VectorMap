{
  "version": 8,
  "name": "Designated bicycle paths",
  "metadata": {
    "owner": "Zeev Stadler",
    "copyright": "Copyright Zeev Stadler 2019-2020. All Rights Reserved.",
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "IHM": {
      "type": "vector",
      "url": "https://israelhiking.osm.org.il/vector/data/v3.json"
    }
  },
  "sprite": "https://israelhikingmap.github.io/VectorMap/Icons/publish/sprite",
  "glyphs": "https://israelhiking.osm.org.il/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "designated bicycle-path",
      "type": "line",
      "metadata": {"IHM:overlay": true},
      "source": "IHM",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["==", "subclass", "path"],
        ["==", "bicycle", "designated"]
      ],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": "cyan",
        "line-opacity": 0.5,
        "line-width": {"base": 1, "stops": [[12, 3], [13, 7], [16, 12]]}
      }
    }
  ],
  "id": "DCP"
}
